    <body>
		<div class="container">
			<header>
				<h1 class = "title">Pinpoint!</h1>
			</header>
		</div>
		<div class="container">
			<header>
				<h2>Login</h2>
			</header>

            <form role="form" method="get" action="/index">
                <label class = "lbl">Username: </label>
								<br>
								<input class="entry" type="text" id="entry" name="entry"> <br>
                <label class = "lbl">Password: </label>
								<br>
								<input class="entry" type="password" id="entry" name="entry"> <br>
                <input class="submitButton" type="submit" value="Login">
            </form>
        </div>
        <div class ="container">
        	<h3> Login with Facebook! </h3>
	        <p class="facebookLogin">
							<fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
							</fb:login-button>
					</p>
		</div>
		<script>
		  window.fbAsyncInit = function() {
		    FB.init({
		      appId      : '624949807951142',
		      cookie     : true,
		      xfbml      : true,
		      version    : 'v3.2'
		    });
		      
		    FB.AppEvents.logPageView();   
		    FB.Event.subscribe('auth.login', function(){
			    window.location = 'index';
			});
		      
		  };

		  (function(d, s, id){
		     var js, fjs = d.getElementsByTagName(s)[0];
		     if (d.getElementById(id)) {return;}
		     js = d.createElement(s); js.id = id;
		     js.src = "https://connect.facebook.net/en_US/sdk.js";
		     fjs.parentNode.insertBefore(js, fjs);
		   }(document, 'script', 'facebook-jssdk'));
		</script>
    </body>
