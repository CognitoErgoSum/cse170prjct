<html>
	<head>
		<title>The App</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="../css/bootstrap-theme.css" rel="stylesheet">
		<link href="../css/bootstrap.css" rel="stylesheet">
        <link href="../css/result.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <button id="backbutton">Back</button>
            <h1>RESULTS</h1>
            <table class="resTable">
                <tbody>
                {{#each pages}}
                    <tr>
                        <td class="result">  <a href="{{url}}"> {{name}}</a>
                        <!-- <img class="img-thumbnail" src="{{image}}"> -->
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <h3> Is the info you want not here? our experts have you covered!</h3>
        <button id="askButton"> ask an expert</button>
        <script  type="text/javascript">
            document.getElementById("backbutton").onclick = function (){
            location.href = '/index';
            };
        </script>
        <script  type="text/javascript">
            document.getElementById("askbutton").onclick = function (){
                location.href = '/ask_a_question';
            };
        </script>
    </body>
</html>
