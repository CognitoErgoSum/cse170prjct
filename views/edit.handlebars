<html>
	<head>
		<title>The App</title>
		<meta charset="utf-8">
    	<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="../css/bootstrap-theme.css" rel="stylesheet">
		<link href="../css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="../css/bootstrap.css" rel="stylesheet">
		<link href="../css/edit.css" rel="stylesheet">

        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script type="module" src="/js/edit_b.js"></script>
	</head>
	<body>
		<div class="container-fluid">
			<header class="header">
				<h4>
					Edit your filters or delete what you don't need
				</h4>
			</header>
			<div class="row">
				{{#each categories}}
					<form class="formCategory" role="form" method="GET"  action="/editBucket">
						<input class="selectCategory" id="{{name}}" name="entry" type="submit" value="{{name}}"/>
					</form>
				{{/each}} <br>
			</div>
			<footer class="footer">
				<button class="editFooterButton" onclick="location.href='/index'">Back</button>
			</footer>
		</div>

	</body>
	
</html>