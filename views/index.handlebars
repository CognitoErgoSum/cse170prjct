<html>
	<head>
		<title>The App</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="../css/bootstrap-theme.css" rel="stylesheet">
		<link href="../css/bootstrap.css" rel="stylesheet">
		<link href="../css/index.css" rel="stylesheet">
	</head>
	<body>
		<div class="container">
			<header>
				<h1>Category Search</h1>
			</header>
			<form action="/search">
				<label>Search: </label>
				<input class="entry" type="text" id="entry" name="entry"> <br>
				<a class="suggested" href="#">Suggested Content</a>
				<h3>Categories: </h3>
				<table class="categoryList">
					<tbody>
						{{#each categories}}
						<tr>
							{{#each group}}
							<td> <input class="selectCategory" type="button" value="{{name}}"> </td>
							{{/each}}
						</tr>
						{{/each}}
					</tbody>
				</table>
				<input class="submitButton" type="submit" value="Go">
			</form>
		</div>
	</body>
</html>
