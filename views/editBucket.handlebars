<html>
    <head>
        <title>editBucket</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=0.8">
        <link href="../css/bootstrap-theme.css" rel="stylesheet">
        <link href="../css/bootstrap.css" rel="stylesheet">
        <link href="../css/index.css" rel="stylesheet">

        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/buttonClick.js"></script>
    </head>
<body>
    <div class="container">
        <button id="backbutton">Back</button>

        <header class="header">
            <h1>Edit Bucket</h1>
        </header>

        <form autocomplete="off" role="form" method="get" action="/">
            <label>Name: </label>

            <input type="text" id="bucketName" name="bucketName"> <br>
        </form>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse1">Included Terms</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <ul>
                        <li>term  <button class="btn-danger" name="remove">x</button></li>
                        <li>term  <button class="btn-danger" name="remove">x</button></li>
                    </ul>
                    <form autocomplete="on" role="form" method="get">
                        <label>add term: </label>
                        <input type="text" id="include_terms"> <br>
                    </form>
                </div>
            </div>
        </div>


        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse2">excluded Terms</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <ul>
                        <li>term  <button class="btn-danger" name="remove">x</button></li>
                        <li>term  <button class="btn-danger" name="remove">x</button></li>
                    </ul>
                    <form autocomplete="on" role="form" method="get">
                        <label>add term: </label>
                        <input type="text" id="exclude_terms"> <br>
                    </form>
                </div>
            </div>
        </div>


        <button class="btn" >save</button>
        <button class="btn" >cancel</button>
    </div>

    <script  type="text/javascript">
            document.getElementById("backbutton").onclick = function (){
                location.href = '/index';
            };
    </script>
</body>